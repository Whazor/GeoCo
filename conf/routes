# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           	controllers.Application.index
# GET     /geo                         	controllers.Application.geo
GET		/geo/:lat/:long					controllers.Application.geo(lat: String, long: String)
GET		/tiles/:zoom/:column/:row.png	controllers.Tiles.get(zoom: String, column: String, row: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               	controllers.Assets.at(path="/public", file)

GET		/route/:lat/:long				controllers.Routing.route(lat: String, long: String)